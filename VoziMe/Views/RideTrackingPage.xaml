<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="VoziMe.Views.RideTrackingPage"
             Title="Praćenje vožnje"
             BackgroundColor="White">

    <Grid RowDefinitions="*,Auto">
        <!-- MAPA -->
        <maps:Map x:Name="TrackingMap"
                  MapType="Street"
                  IsShowingUser="True" />

        <!-- DETALJI VOZAČA -->
        <Frame Grid.Row="1"
               BackgroundColor="White"
               Padding="15"
               CornerRadius="20"
               HasShadow="True"
               Margin="15">
            <StackLayout>
                <Label x:Name="DriverNameLabel" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                <Label x:Name="CarInfoLabel" FontSize="14" TextColor="Gray"/>
                <Label x:Name="EtaLabel" FontSize="14" TextColor="Green"/>
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>
