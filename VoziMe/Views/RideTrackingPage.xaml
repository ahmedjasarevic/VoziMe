<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="VoziMe.Views.RideTrackingPage"
             Title="Praćenje vožnje"
             BackgroundColor="White">

    <Grid RowDefinitions="*,Auto">
        <!-- Mapa -->
        <maps:Map x:Name="TrackingMap"
                  MapType="Street"
                  IsShowingUser="True" />

        <!-- Detalji vozača -->
        <Frame Grid.Row="1"
               BackgroundColor="White"
               Padding="15"
               CornerRadius="20"
               HasShadow="True"
               Margin="15">
            <StackLayout>
                <Label x:Name="DriverNameLabel" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                <Label x:Name="CarInfoLabel" FontSize="14" TextColor="Gray"/>
                <Label x:Name="EtaLabel" FontSize="14" TextColor="Green"/>
                <Button Text="Završi vožnju"
                        Clicked="FinishRideButton_Clicked"
                        BackgroundColor="Green"
                        TextColor="White"
                        Margin="20"
                        VerticalOptions="End"/>

                <!-- Ocjenjivanje vozača -->
                <StackLayout x:Name="RatingView"
                             IsVisible="False"
                             Margin="0,10,0,0"
                             HorizontalOptions="Center"
                             Orientation="Horizontal"
                             Spacing="10">
                    <Label Text="Ocijeni vožnju:" FontAttributes="Bold" FontSize="16" TextColor="Black" />
                    <StackLayout Orientation="Horizontal" x:Name="StarContainer">
                        <!-- Zvjezdice se dodaju iz code-behind -->
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>
