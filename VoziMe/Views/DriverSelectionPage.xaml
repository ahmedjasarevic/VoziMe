<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:models="clr-namespace:VoziMe.Models"
             x:Class="VoziMe.Views.DriverSelectionPage"
             BackgroundColor="{StaticResource BackgroundColor}"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- MAPA I PRETRAGA -->
        <Grid Grid.Row="0" HeightRequest="250">
            <maps:Map x:Name="LocationMap"
                      IsShowingUser="True"
                      MapType="Street" />

            <Frame Margin="15"
                   Padding="10,5"
                   BackgroundColor="White"
                   CornerRadius="25"
                   VerticalOptions="Start"
                   HorizontalOptions="FillAndExpand">
                <Entry x:Name="SourceEntry"
                       Placeholder="Unesite lokaciju"
                       BackgroundColor="Transparent"
                       TextColor="Black"
                       Completed="SourceEntry_Completed" />
            </Frame>
        </Grid>

        <!-- LISTA VOZAČA -->
        <Grid Grid.Row="1" BackgroundColor="#222222" Padding="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0"
                   Text="Odaberite vozača"
                   TextColor="White"
                   FontSize="20"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20" />

            <CollectionView Grid.Row="1"
                            x:Name="DriversCollection"
                            SelectionMode="Single"
                            SelectionChanged="OnDriverSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Driver">
                        <Frame Style="{StaticResource DriverCardStyle}">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <Frame Grid.Column="0"
                                       HeightRequest="60"
                                       WidthRequest="60"
                                       CornerRadius="30"
                                       Padding="0"
                                       BorderColor="#FF4444"
                                       IsClippedToBounds="True">
                                    <Image Source="{Binding ProfileImage}" Aspect="AspectFill" />
                                </Frame>

                                <VerticalStackLayout Grid.Column="1" Margin="15,0,0,0">
                                    <Label Text="{Binding Name}" TextColor="White" FontSize="16" FontAttributes="Bold" />
                                    <Label Text="{Binding Distance, StringFormat='Udaljenost: {0}'}" TextColor="#AAAAAA" FontSize="12" />
                                    <Label Text="{Binding Car, StringFormat='Auto: {0}'}" TextColor="#AAAAAA" FontSize="12" />
                                    <Label Text="{Binding Price, StringFormat='Cijena: {0}'}" TextColor="#AAAAAA" FontSize="12" />
                                </VerticalStackLayout>

                                <HorizontalStackLayout Grid.Column="2" VerticalOptions="Start">
                                    <Label Text="{Binding Rating, StringFormat='{0}★'}" TextColor="#FFD700" FontSize="14" />
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <!-- DONJA NAVIGACIJA -->
        <Grid Grid.Row="2" BackgroundColor="White" HeightRequest="60">
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Spacing="50" VerticalOptions="Center">
                <ImageButton Source="home_icon.png" HeightRequest="24" WidthRequest="24" BackgroundColor="Transparent" />
                <ImageButton Source="payment_icon.png" HeightRequest="24" WidthRequest="24" BackgroundColor="Transparent" />
                <ImageButton Source="message_icon.png" HeightRequest="24" WidthRequest="24" BackgroundColor="Transparent" />
                <ImageButton Source="profile_icon.png" HeightRequest="24" WidthRequest="24" BackgroundColor="Transparent" />
            </HorizontalStackLayout>
        </Grid>

    </Grid>
</ContentPage>
